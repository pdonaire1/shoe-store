<p id="notice"><%= notice %></p>

<h1>Brands</h1>

<table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp full-width">
  <thead>
    <tr>
      <th class="mdl-data-table__cell--non-numeric">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td class="mdl-data-table__cell--non-numeric"><%= brand.name %></td>
        <td class="mdl-data-table__cell--non-numeric"><%= link_to 'Show', brand %></td>
        <td class="mdl-data-table__cell--non-numeric"><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td class="mdl-data-table__cell--non-numeric"><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

